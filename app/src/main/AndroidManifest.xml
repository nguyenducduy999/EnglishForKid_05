<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.framgia.englishforkid"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ui.activity.MainActivity"/>
        <activity android:name=".fetchweb.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".videoview.PlayVideoActivity"
                  android:configChanges="orientation|screenSize"/>

        <provider
            android:name=".data.local.EnglishForKidProvider"
            android:authorities="com.framgia.EnglishForKidProvider"
            android:exported="true"
            android:multiprocess="true"/>
    </application>
</manifest>